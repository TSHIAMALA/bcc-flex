{% extends 'base.html.twig' %}

{% block title %}Marché des Changes{% endblock %}
{% block header_title %}Marché des Changes{% endblock %}
{% block header_subtitle %}Analyse approfondie des taux et volumes{% endblock %}

{% block body %}
<!-- Date Filter Bar -->
<div class="filter-bar mb-20">
    <div class="filter-bar-content">
        <div class="filter-section filter-title">
            <i class="fas fa-filter"></i>
            <span>Période</span>
        </div>
        <div class="filter-section filter-buttons">
            <a href="{{ path('app_marche', {periode: '7jours'}) }}" class="filter-btn {{ periode == '7jours' ? 'active' : '' }}">7 jours</a>
            <a href="{{ path('app_marche', {periode: '30jours'}) }}" class="filter-btn {{ periode == '30jours' ? 'active' : '' }}">30 jours</a>
            <a href="{{ path('app_marche', {periode: '3mois'}) }}" class="filter-btn {{ periode == '3mois' ? 'active' : '' }}">3 mois</a>
        </div>
        <div class="filter-divider"></div>
        <form method="GET" action="{{ path('app_marche') }}" class="filter-section filter-custom">
            <label>Du</label>
            <input type="date" name="dateDebut" value="{{ dateDebut }}" class="filter-date">
            <label>Au</label>
            <input type="date" name="dateFin" value="{{ dateFin }}" class="filter-date">
            <input type="hidden" name="periode" value="personnalise">
            <button type="submit" class="filter-apply-btn">
                <i class="fas fa-check"></i> Appliquer
            </button>
        </form>
    </div>
</div>

<!-- Header Stats -->
<div class="stats-header mb-30">
    {% if latestMarche %}
    <div class="stats-date">
        <span class="stats-date-badge">
            <i class="fas fa-calendar-alt"></i> Données du {{ latestMarche.conjoncture.dateSituation|date('d/m/Y') }}
        </span>
    </div>
    {% endif %}
    <div class="stats-row">
        <div class="stat-box">
            <div class="stat-icon"><i class="fas fa-university"></i></div>
            <div class="stat-content">
                <span class="stat-label">COURS INDICATIF BCC</span>
                <span class="stat-value">{{ latestMarche.coursIndicatif|default(0)|number_format(2, ',', ' ') }}</span>
                <span class="stat-change {{ varIndicatif > 0 ? 'negative' : 'positive' }}">
                    <i class="fas fa-{{ varIndicatif > 0 ? 'caret-up' : 'caret-down' }}"></i> {{ varIndicatif|abs|number_format(2, ',', ' ') }}%
                </span>
            </div>
        </div>
        <div class="stat-box">
            <div class="stat-icon success"><i class="fas fa-shopping-cart"></i></div>
            <div class="stat-content">
                <span class="stat-label">PARALLÈLE ACHAT</span>
                <span class="stat-value">{{ latestMarche.paralleleAchat|default(0)|number_format(2, ',', ' ') }}</span>
            </div>
        </div>
        <div class="stat-box">
            <div class="stat-icon danger"><i class="fas fa-hand-holding-usd"></i></div>
            <div class="stat-content">
                <span class="stat-label">PARALLÈLE VENTE</span>
                <span class="stat-value">{{ latestMarche.paralleleVente|default(0)|number_format(2, ',', ' ') }}</span>
            </div>
        </div>
        <div class="stat-box">
            <div class="stat-icon {{ latestMarche.ecartIndicParallele|default(0) > 100 ? 'warning' : 'success' }}">
                <i class="fas fa-balance-scale-left"></i>
            </div>
            <div class="stat-content">
                <span class="stat-label">ÉCART</span>
                <span class="stat-value">{{ latestMarche.ecartIndicParallele|default(0)|number_format(0, ',', ' ') }}</span>
                <span class="stat-change {{ latestMarche.ecartIndicParallele|default(0) > 100 ? 'negative' : 'positive' }}">CDF</span>
            </div>
        </div>
    </div>
</div>

{% if latestMarche and latestMarche.ecartIndicParallele > 100 %}
<div class="alert-box alert-warning">
    <i class="fas fa-exclamation-triangle alert-icon"></i>
    <div class="alert-content">
        <h4>⚠️ Pression sur le taux de change détectée</h4>
        <p>L'écart indicatif/parallèle atteint {{ latestMarche.ecartIndicParallele|number_format(0, ',', ' ') }} CDF</p>
    </div>
</div>
{% endif %}

<!-- Row 1: Historique des Cours + Évolution des Cours (30j) -->
<div class="grid-2 mb-30">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-table"></i> Historique des Cours</h3>
        </div>
        <div class="table-container" style="max-height: 320px; overflow-y: auto;">
            <table class="data-table">
                <thead>
                    <tr><th>Date</th><th>Indicatif</th><th>Achat</th><th>Vente</th><th>Écart</th></tr>
                </thead>
                <tbody>
                    {% for m in marcheTableData %}
                    <tr>
                        <td>{{ m.conjoncture.dateSituation|date('d/m/Y') }}</td>
                        <td class="font-bold">{{ m.coursIndicatif|number_format(2, ',', ' ') }}</td>
                        <td class="text-success">{{ m.paralleleAchat|number_format(2, ',', ' ') }}</td>
                        <td class="text-danger">{{ m.paralleleVente|number_format(2, ',', ' ') }}</td>
                        <td>
                            <span class="inline-badge {{ m.ecartIndicParallele > 100 ? 'danger' : 'success' }}">
                                {{ m.ecartIndicParallele|number_format(0, ',', ' ') }}
                            </span>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-chart-candlestick"></i> Évolution des Cours (30j)</h3>
        </div>
        <div class="chart-container" style="height: 320px;">
            <canvas id="chartCandlestick"></canvas>
        </div>
    </div>
</div>

<!-- Row 2: Répartition des Réserves + Évolution des Réserves -->
<div class="grid-2 mb-30">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-compass"></i> Répartition des Réserves</h3>
        </div>
        <div class="chart-container" style="height: 280px;">
            <canvas id="chartPolarReserves"></canvas>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-mountain"></i> Évolution des Réserves</h3>
        </div>
        <div class="chart-container" style="height: 280px;">
            <canvas id="chartReservesEvol"></canvas>
        </div>
    </div>
</div>

<!-- Row 3: Volumes USD par Banque + Encours BCC -->
<div class="grid-2">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-building"></i> Volumes USD par Banque</h3>
        </div>
        <div class="card-body">
            {% if volumes|length > 0 %}
            <div class="chart-container" style="height: 280px;">
                <canvas id="chartVolumes"></canvas>
            </div>
            {% else %}
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <p>Aucune donnée de volume disponible</p>
            </div>
            {% endif %}
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file-invoice-dollar"></i> Encours BCC</h3>
        </div>
        <div class="card-body">
            <div class="encours-container">
                <div class="encours-chart">
                    <canvas id="chartEncours"></canvas>
                </div>
                <div class="encours-legend">
                    {% if encours %}
                    <div class="encours-item ot-bcc">
                        <div class="encours-value">{{ encours.encoursOtBcc|number_format(0, ',', ' ') }}</div>
                        <div class="encours-label">OT-BCC (Mds)</div>
                    </div>
                    <div class="encours-item b-bcc">
                        <div class="encours-value">{{ encours.encoursBBcc|number_format(0, ',', ' ') }}</div>
                        <div class="encours-label">B-BCC (Mds)</div>
                    </div>
                    {% else %}
                    <div class="empty-state-small">
                        <p>Aucune donnée</p>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Filter Bar Styles */
.filter-bar {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    padding: 15px 20px;
}

.filter-bar-content {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
}

.filter-section {
    display: flex;
    align-items: center;
    gap: 10px;
}

.filter-title {
    font-weight: 600;
    color: var(--bcc-primary);
}

.filter-title i {
    font-size: 1rem;
}

.filter-buttons {
    display: flex;
    gap: 8px;
}

.filter-btn {
    padding: 8px 16px;
    border: 1px solid #e2e8f0;
    background: #f8fafc;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s ease;
}

.filter-btn:hover {
    background: #e2e8f0;
    color: var(--text-primary);
}

.filter-btn.active {
    background: var(--bcc-primary);
    color: white;
    border-color: var(--bcc-primary);
}

.filter-divider {
    width: 1px;
    height: 30px;
    background: #e2e8f0;
}

.filter-custom label {
    font-size: 0.85rem;
    color: var(--text-secondary);
}

.filter-date {
    padding: 8px 12px;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    font-size: 0.85rem;
    background: #f8fafc;
}

.filter-apply-btn {
    padding: 8px 16px;
    background: linear-gradient(135deg, var(--bcc-primary), #0056b3);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
}

.filter-apply-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(0, 127, 255, 0.3);
}

/* Dark mode filter bar */
[data-theme="dark"] .filter-bar,
body.dark-mode .filter-bar {
    background: var(--bg-card);
}

[data-theme="dark"] .filter-btn,
body.dark-mode .filter-btn {
    background: #334155;
    border-color: #475569;
    color: #94a3b8;
}

[data-theme="dark"] .filter-btn:hover,
body.dark-mode .filter-btn:hover {
    background: #475569;
    color: white;
}

[data-theme="dark"] .filter-btn.active,
body.dark-mode .filter-btn.active {
    background: var(--bcc-primary);
    color: white;
}

[data-theme="dark"] .filter-date,
body.dark-mode .filter-date {
    background: #334155;
    border-color: #475569;
    color: white;
}

[data-theme="dark"] .filter-divider,
body.dark-mode .filter-divider {
    background: #475569;
}

/* Marche specific styles */
.stats-header { background: var(--bg-sidebar); border-radius: var(--border-radius); padding: 25px; box-shadow: var(--shadow-lg); }
.stats-row { display: flex; gap: 15px; flex-wrap: wrap; }
.stat-box { flex: 1; min-width: 200px; background: rgba(255,255,255,0.1); backdrop-filter: blur(10px); border-radius: 12px; padding: 18px 20px; display: flex; align-items: center; gap: 15px; border: 1px solid rgba(255,255,255,0.1); }
.stat-icon { width: 50px; height: 50px; background: rgba(0,127,255,0.3); border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 1.3rem; color: #4da3ff; }
.stat-icon.success { background: rgba(16,185,129,0.3); color: #34d399; }
.stat-icon.danger { background: rgba(239,68,68,0.3); color: #f87171; }
.stat-icon.warning { background: rgba(245,158,11,0.3); color: #fbbf24; }
.stat-content { display: flex; flex-direction: column; }
.stat-label { font-size: 0.7rem; font-weight: 700; color: rgba(255,255,255,0.6); text-transform: uppercase; letter-spacing: 1px; }
.stat-value { font-size: 1.5rem; font-weight: 800; color: white; }
.stat-change { font-size: 0.75rem; font-weight: 600; display: flex; align-items: center; gap: 4px; }
.stat-change.positive { color: #34d399; }
.stat-change.negative { color: #f87171; }
.encours-legend { display: flex; flex-direction: column; gap: 15px; }
.encours-item { text-align: center; padding: 15px 20px; background: linear-gradient(135deg, rgba(0,127,255,0.1), rgba(0,127,255,0.05)); border-radius: 12px; min-width: 120px; }
.encours-item.ot-bcc { border-left: 4px solid #007FFF; }
.encours-item.b-bcc { border-left: 4px solid #0056b3; }
.encours-value { font-size: 1.6rem; font-weight: 800; color: var(--bcc-primary); }
.encours-label { font-size: 0.8rem; color: var(--text-secondary); margin-top: 5px; }
.encours-container { display: flex; gap: 25px; align-items: center; padding: 10px 0; }
.encours-chart { flex: 1; height: 180px; min-width: 180px; }
.empty-state { display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 40px; color: var(--text-secondary); }
.empty-state i { font-size: 2.5rem; margin-bottom: 15px; opacity: 0.5; }
.empty-state p { font-size: 0.9rem; }
.empty-state-small { padding: 20px; text-align: center; color: var(--text-secondary); }
.card-body { padding: 20px; }
.inline-badge { display: inline-block; padding: 4px 10px; border-radius: 20px; font-size: 0.8rem; font-weight: 700; }
.inline-badge.success { background: var(--success-light); color: var(--success); }
.inline-badge.danger { background: var(--danger-light); color: var(--danger); }
.stats-date { text-align: center; margin-bottom: 15px; }
.stats-date-badge { display: inline-block; padding: 6px 16px; background: rgba(255,255,255,0.12); color: rgba(255,255,255,0.9); border-radius: 20px; font-size: 0.82rem; font-weight: 500; letter-spacing: 0.3px; }
.stats-date-badge i { margin-right: 5px; opacity: 0.7; }
</style>

{% block javascripts %}
<script>
const evoData = [
    {% for m in evolutionData %}
    {
        date_situation: '{{ m.conjoncture.dateSituation|date("Y-m-d") }}',
        cours_indicatif: {{ m.coursIndicatif }},
        parallele_vente: {{ m.paralleleVente }},
        parallele_achat: {{ m.paralleleAchat }}
    },
    {% endfor %}
];

const resData = [
    {% for r in reservesHistory %}
    {
        date_situation: '{{ r.conjoncture.dateSituation|date("Y-m-d") }}',
        reserves_internationales_usd: {{ r.reservesInternationalesUsd }},
        avoirs_externes_usd: {{ r.avoirsExternesUsd }}
    },
    {% endfor %}
];

// 1. Multi-line avec zones
new Chart(document.getElementById('chartCandlestick'), {
    type: 'line',
    data: {
        labels: evoData.map(d => new Date(d.date_situation).toLocaleDateString('fr-FR', {day:'2-digit',month:'2-digit'})),
        datasets: [
            { label: 'Indicatif', data: evoData.map(d => d.cours_indicatif), borderColor: '#007FFF', backgroundColor: 'rgba(0,127,255,0.15)', fill: true, tension: 0.3, borderWidth: 3, pointRadius: 4 },
            { label: 'Parallèle Vente', data: evoData.map(d => d.parallele_vente), borderColor: '#ef4444', borderDash: [5,5], fill: false, tension: 0.3, borderWidth: 2 },
            { label: 'Parallèle Achat', data: evoData.map(d => d.parallele_achat), borderColor: '#10b981', fill: false, tension: 0.3, borderWidth: 2 }
        ]
    },
    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'top' } }, scales: { y: { beginAtZero: false }, x: { grid: { display: false } } } }
});

// 2. Polar Area - Réserves
{% if latestReserves %}
new Chart(document.getElementById('chartPolarReserves'), {
    type: 'polarArea',
    data: {
        labels: ['Réserves Int.', 'Avoirs Ext.', 'Réserves Banques', 'Avoirs Libres'],
        datasets: [{ 
            data: [{{ latestReserves.reservesInternationalesUsd }}, {{ latestReserves.avoirsExternesUsd }}, {{ latestReserves.reservesBanquesCdf }}, {{ latestReserves.avoirsLibresCdf }}],
            backgroundColor: ['rgba(0,127,255,0.7)', 'rgba(139,92,246,0.7)', 'rgba(16,185,129,0.7)', 'rgba(245,158,11,0.7)']
        }]
    },
    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'right' } } }
});
{% endif %}

// 3. Volumes horizontal
{% set volumeLabels = [] %}
{% set volumeValues = [] %}
{% for v in volumes %}
    {% set volumeLabels = volumeLabels|merge([v.banque]) %}
    {% set volumeValues = volumeValues|merge([v.volumeTotalUsd]) %}
{% endfor %}

new Chart(document.getElementById('chartVolumes'), {
    type: 'bar',
    data: { labels: {{ volumeLabels|json_encode|raw }}, datasets: [{ data: {{ volumeValues|json_encode|raw }}, backgroundColor: ['#007FFF','#0056b3','#10b981','#8b5cf6','#f59e0b'], borderRadius: 8 }] },
    options: { indexAxis: 'y', responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
});

// 4. Doughnut Encours
{% if encours %}
new Chart(document.getElementById('chartEncours'), {
    type: 'doughnut',
    data: { labels: ['OT-BCC', 'B-BCC'], datasets: [{ data: [{{ encours.encoursOtBcc }}, {{ encours.encoursBBcc }}], backgroundColor: ['#007FFF', '#0056b3'], borderWidth: 0, cutout: '60%' }] },
    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
});
{% endif %}

// 5. Area Réserves évolution
new Chart(document.getElementById('chartReservesEvol'), {
    type: 'line',
    data: {
        labels: resData.reverse().map(d => new Date(d.date_situation).toLocaleDateString('fr-FR', {day:'2-digit',month:'2-digit'})),
        datasets: [
            { label: 'Réserves Int.', data: resData.map(d => d.reserves_internationales_usd), borderColor: '#007FFF', backgroundColor: 'rgba(0,127,255,0.2)', fill: true, tension: 0.4 },
            { label: 'Avoirs Ext.', data: resData.map(d => d.avoirs_externes_usd), borderColor: '#8b5cf6', backgroundColor: 'rgba(139,92,246,0.1)', fill: true, tension: 0.4 }
        ]
    },
    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'top' } }, scales: { y: { beginAtZero: false } } }
});
</script>
{% endblock %}
{% endblock %}
