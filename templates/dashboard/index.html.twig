{% extends 'base.html.twig' %}

{% block title %}Vue d'ensemble{% endblock %}
{% block header_title %}Tableau de Bord{% endblock %}
{% block header_subtitle %}Indicateurs de Conjoncture Économique{% endblock %}

{% block body %}
    <!-- Date Filter Bar -->
    <div class="filter-bar mb-20">
        <div class="filter-bar-content">
            <div class="filter-label">
                <i class="fas fa-calendar-alt"></i>
                <span>Période :</span>
            </div>
            <div class="filter-buttons">
                <a href="{{ path('app_dashboard', {periode: '7jours'}) }}" class="filter-btn {{ periode == '7jours' ? 'active' : '' }}">7 jours</a>
                <a href="{{ path('app_dashboard', {periode: '30jours'}) }}" class="filter-btn {{ periode == '30jours' ? 'active' : '' }}">30 jours</a>
                <a href="{{ path('app_dashboard', {periode: '3mois'}) }}" class="filter-btn {{ periode == '3mois' ? 'active' : '' }}">3 mois</a>
            </div>
            <div class="filter-divider"></div>
            <form class="filter-custom" method="get" action="{{ path('app_dashboard') }}">
                <input type="hidden" name="periode" value="personnalise">
                <div class="filter-date-group">
                    <label>Du</label>
                    <input type="date" name="dateDebut" value="{{ dateDebut }}" class="filter-date-input">
                </div>
                <div class="filter-date-group">
                    <label>Au</label>
                    <input type="date" name="dateFin" value="{{ dateFin }}" class="filter-date-input">
                </div>
                <button type="submit" class="filter-apply-btn">
                    <i class="fas fa-search"></i>
                    Appliquer
                </button>
            </form>
        </div>
    </div>

    <!-- ITM Gauge + Stats Header -->
    <div class="dashboard-top mb-30">
        <!-- ITM Gauge Section -->
        <div class="itm-section">
            <div class="itm-gauge-wrapper">
                <div class="itm-header">
                    <span class="itm-header-title">Indice de Tension du Marché</span>
                    <button class="info-toggle" onclick="toggleItmInfo()" title="Comprendre l'ITM">
                        <i class="fas fa-question-circle"></i>
                    </button>
                </div>
                
                <!-- Panneau d'explication ITM -->
                <div id="itmInfoPanel" class="itm-info-panel" style="display: none;">
                    <div class="itm-info-content">
                        <p class="itm-info-intro">
                            <strong>L'ITM</strong> (Indice de Tension du Marché) est un indicateur composite qui mesure la stabilité du marché des changes.
                        </p>
                        <div class="itm-info-calc">
                            <div class="itm-info-title"><i class="fas fa-calculator"></i> Comment est-il calculé ?</div>
                            <ul class="itm-info-list">
                                <li><strong>Écart de change</strong> - Différence entre cours officiel et parallèle</li>
                                <li><strong>Niveau des réserves</strong> - Réserves internationales en USD</li>
                                <li><strong>Solde budgétaire</strong> - Équilibre recettes/dépenses</li>
                                <li><strong>Volume des transactions</strong> - Activité du marché USD</li>
                            </ul>
                        </div>
                        <div class="itm-info-levels">
                            <div class="itm-info-title"><i class="fas fa-thermometer-half"></i> Niveaux d'interprétation</div>
                            <div class="itm-level-grid">
                                <div class="itm-level-item level-calm">
                                    <span class="level-range">0-30%</span>
                                    <span class="level-name">Calme</span>
                                    <span class="level-desc">Marché stable, conditions normales</span>
                                </div>
                                <div class="itm-level-item level-vigilance">
                                    <span class="level-range">30-50%</span>
                                    <span class="level-name">Vigilance</span>
                                    <span class="level-desc">Surveillance accrue recommandée</span>
                                </div>
                                <div class="itm-level-item level-tension">
                                    <span class="level-range">50-70%</span>
                                    <span class="level-name">Tension</span>
                                    <span class="level-desc">Intervention probable nécessaire</span>
                                </div>
                                <div class="itm-level-item level-critical">
                                    <span class="level-range">70-100%</span>
                                    <span class="level-name">Critique</span>
                                    <span class="level-desc">Action immédiate requise</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="itm-content">
                    <div class="itm-gauge-container">
                        <svg class="itm-gauge-svg" viewBox="0 0 200 130">
                            <defs>
                                <!-- Colored segments -->
                                <linearGradient id="gaugeGreen" x1="0%" y1="0%" x2="100%">
                                    <stop offset="0%" stop-color="#10b981"/>
                                    <stop offset="100%" stop-color="#34d399"/>
                                </linearGradient>
                                <linearGradient id="gaugeYellow" x1="0%" y1="0%" x2="100%">
                                    <stop offset="0%" stop-color="#84cc16"/>
                                    <stop offset="100%" stop-color="#f59e0b"/>
                                </linearGradient>
                                <linearGradient id="gaugeOrange" x1="0%" y1="0%" x2="100%">
                                    <stop offset="0%" stop-color="#f59e0b"/>
                                    <stop offset="100%" stop-color="#f97316"/>
                                </linearGradient>
                                <linearGradient id="gaugeRed" x1="0%" y1="0%" x2="100%">
                                    <stop offset="0%" stop-color="#f97316"/>
                                    <stop offset="100%" stop-color="#ef4444"/>
                                </linearGradient>
                            </defs>
                            
                            <!-- Background segments -->
                            <path d="M 20 105 A 80 80 0 0 1 50 45" fill="none" stroke="#10b981" stroke-width="18" stroke-linecap="butt"/>
                            <path d="M 52 43 A 80 80 0 0 1 100 25" fill="none" stroke="#84cc16" stroke-width="18" stroke-linecap="butt"/>
                            <path d="M 102 25 A 80 80 0 0 1 148 43" fill="none" stroke="#f59e0b" stroke-width="18" stroke-linecap="butt"/>
                            <path d="M 150 45 A 80 80 0 0 1 180 105" fill="none" stroke="#ef4444" stroke-width="18" stroke-linecap="butt"/>
                            
                            <!-- Tick marks -->
                            <line x1="20" y1="105" x2="28" y2="105" stroke="#1f2937" stroke-width="2"/>
                            <line x1="50" y1="45" x2="56" y2="50" stroke="#1f2937" stroke-width="2"/>
                            <line x1="100" y1="25" x2="100" y2="33" stroke="#1f2937" stroke-width="2"/>
                            <line x1="150" y1="45" x2="144" y2="50" stroke="#1f2937" stroke-width="2"/>
                            <line x1="180" y1="105" x2="172" y2="105" stroke="#1f2937" stroke-width="2"/>
                            
                            <!-- Needle -->
                            <g transform="rotate({{ -90 + (itm.score * 1.8) }}, 100, 105)">
                                <polygon points="100,40 96,105 104,105" fill="#1f2937"/>
                                <circle cx="100" cy="105" r="10" fill="#1f2937"/>
                                <circle cx="100" cy="105" r="6" fill="#fff"/>
                            </g>
                        </svg>
                        <div class="itm-score-below">
                            <span class="itm-score-big" style="color: {{ itmColor }}">{{ itm.score|number_format(1, ',', ' ') }}%</span>
                        </div>
                    </div>
                    <div class="itm-legend">
                        <div class="itm-legend-item success">
                            <span class="itm-legend-color" style="background: #10b981;"></span>
                            <span class="itm-legend-text">Calme</span>
                            <span class="itm-legend-range">0 - 30</span>
                        </div>
                        <div class="itm-legend-item moderate">
                            <span class="itm-legend-color" style="background: #84cc16;"></span>
                            <span class="itm-legend-text">Vigilance</span>
                            <span class="itm-legend-range">30 - 50</span>
                        </div>
                        <div class="itm-legend-item warning">
                            <span class="itm-legend-color" style="background: #f59e0b;"></span>
                            <span class="itm-legend-text">Tension</span>
                            <span class="itm-legend-range">50 - 70</span>
                        </div>
                        <div class="itm-legend-item danger">
                            <span class="itm-legend-color" style="background: #ef4444;"></span>
                            <span class="itm-legend-text">Critique</span>
                            <span class="itm-legend-range">70 - 100</span>
                        </div>
                    </div>
                </div>
                <div class="itm-status {{ itmClass }}">
                    <i class="fas fa-{{ itmClass == 'danger' ? 'exclamation-triangle' : (itmClass == 'warning' ? 'exclamation-circle' : 'check-circle') }}"></i>
                    {{ itm.label }}
                </div>
            </div>
        </div>

        <!-- KPI Stats Row -->
        <div class="stats-header">
            <div class="stats-row">
                <div class="stat-box">
                    <div class="stat-icon"><i class="fas fa-university"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">COURS INDICATIF</span>
                        <span class="stat-value">{{ latestKPI.coursIndicatif|default(0)|number_format(2, ',', ' ') }}</span>
                        <span class="stat-change {{ varCoursIndicatif > 0 ? 'negative' : 'positive' }}">
                            <i class="fas fa-{{ varCoursIndicatif > 0 ? 'caret-up' : 'caret-down' }}"></i>
                            {{ varCoursIndicatif|abs|number_format(2, ',', ' ') }}%
                        </span>
                    </div>
                </div>
                <div class="stat-box">
                    <div class="stat-icon warning"><i class="fas fa-exchange-alt"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">ÉCART INDICATIF/PARALLÈLE</span>
                        <span class="stat-value">{{ latestMarche.ecartIndicParallele|default(0)|number_format(0, ',', ' ') }}</span>
                        <span class="stat-change {{ latestMarche.ecartIndicParallele|default(0) > 100 ? 'negative' : 'positive' }}">CDF</span>
                    </div>
                </div>
                <div class="stat-box">
                    <div class="stat-icon success"><i class="fas fa-piggy-bank"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">RÉSERVES INT.</span>
                        <span class="stat-value">{{ latestKPI.reservesInternationalesUsd|default(0)|number_format(0, ',', ' ') }}M</span>
                        <span class="stat-change {{ varReserves >= 0 ? 'positive' : 'negative' }}">
                            <i class="fas fa-{{ varReserves >= 0 ? 'caret-up' : 'caret-down' }}"></i>
                            {{ varReserves|abs|number_format(2, ',', ' ') }}%
                        </span>
                    </div>
                </div>
                <div class="stat-box">
                    <div class="stat-icon {{ latestKPI.solde|default(0) >= 0 ? 'success' : 'danger' }}"><i class="fas fa-balance-scale"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">SOLDE BUDGET</span>
                        <span class="stat-value">{{ latestKPI.solde|default(0)|number_format(2, ',', ' ') }}</span>
                        <span class="stat-change {{ latestKPI.solde|default(0) >= 0 ? 'positive' : 'negative' }}">
                            {{ latestKPI.solde|default(0) >= 0 ? 'Excédent' : 'Déficit' }}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Alerts Section -->
    {% if activeAlerts|length > 0 %}
    <div class="alert-box alert-{{ activeAlerts[0].type }} mb-30">
        <i class="fas fa-exclamation-triangle alert-icon"></i>
        <div class="alert-content">
            <h4>⚠️ {{ activeAlerts|length }} alerte(s) active(s) requérant attention</h4>
            <p>Des indicateurs ont dépassé les seuils configurés. Consultez le tableau ci-dessous.</p>
        </div>
    </div>
    {% endif %}

    <!-- Row 1: Evolution Chart + Active Alerts Table -->
    <div class="grid-2 mb-30">
        <!-- Graphique Évolution des Cours -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-line"></i>
                    Évolution du Taux de Change
                </h3>
                <div class="card-actions">
                    <span class="card-badge badge-info">7 jours</span>
                </div>
            </div>
            <div class="chart-container" style="height: 280px;">
                <canvas id="chartCoursEvolution"></canvas>
            </div>
        </div>
        
        <!-- Tableau des Alertes Actives -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-bell"></i>
                    Alertes Actives
                </h3>
                <div class="card-actions">
                    <a href="{{ path('app_alertes') }}" class="card-badge badge-info">Voir tout</a>
                </div>
            </div>
            <div class="table-container">
                {% if activeAlerts|length > 0 %}
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Indicateur</th>
                            <th>Valeur</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for alerte in activeAlerts|slice(0, 5) %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-10">
                                    <i class="fas fa-{{ alerte.icon }} text-{{ alerte.type }}"></i>
                                    <strong>{{ alerte.titre }}</strong>
                                </div>
                            </td>
                            <td>{{ alerte.valeur|number_format(2, ',', ' ') }}</td>
                            <td>
                                <span class="inline-badge {{ alerte.type }}">{{ alerte.statut }}</span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% else %}
                <div class="text-center p-20 text-muted">
                    <i class="fas fa-check-circle fa-3x mb-10" style="color: var(--success);"></i>
                    <p>Aucune alerte active</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Row 2: Barres horizontales + Waterfall -->
    <div class="grid-2 mb-30">
        <!-- Camembert Répartition Recettes -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-pie"></i>
                    Répartition des Recettes
                </h3>
            </div>
            <div style="display: flex; align-items: center; gap: 20px;">
                <div class="chart-container" style="height: 250px; flex: 1;">
                    <canvas id="chartRecettesPie"></canvas>
                </div>
                <div class="pie-legend">
                    <div class="legend-item">
                        <span class="legend-color" style="background: #3B6FAB;"></span>
                        <div>
                            <div class="legend-label">Recettes Fiscales</div>
                            <div class="legend-value">{{ latestFinances.recettesFiscales|default(0)|number_format(0, ',', ' ') }} Mds</div>
                        </div>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color" style="background: #10b981;"></span>
                        <div>
                            <div class="legend-label">Autres Recettes</div>
                            <div class="legend-value">{{ latestFinances.autresRecettes|default(0)|number_format(0, ',', ' ') }} Mds</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Waterfall - Recettes vs Dépenses -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-water"></i>
                    Cascade Budgétaire
                </h3>
            </div>
            <div class="chart-container" style="height: 280px;">
                <canvas id="chartWaterfall"></canvas>
            </div>
        </div>
    </div>

    <!-- Row 3: Area Chart + Doughnut -->
    <div class="grid-2 mb-30">
        <!-- Area Chart - Réserves -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-layer-group"></i>
                    Évolution des Réserves
                </h3>
            </div>
            <div class="chart-container" style="height: 280px;">
                <canvas id="chartReservesArea"></canvas>
            </div>
        </div>
        
        <!-- Doughnut avec centre - Paie -->
        {% if paie %}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-users"></i>
                    Exécution de la Paie
                </h3>
            </div>
            <div style="position: relative;">
                <div class="chart-container" style="height: 250px;">
                    <canvas id="chartPaieDoughnut"></canvas>
                </div>
                <div class="doughnut-center">
                    <div class="doughnut-value">{{ ((paie.montantPaye / paie.montantTotal) * 100)|number_format(0) }}%</div>
                    <div class="doughnut-label">Payé</div>
                </div>
            </div>
            <div class="paie-stats">
                <div class="paie-stat success">
                    <i class="fas fa-check-circle"></i>
                    <span>Payé: {{ paie.montantPaye|number_format(0, ',', ' ') }} Mds</span>
                </div>
                <div class="paie-stat danger">
                    <i class="fas fa-clock"></i>
                    <span>Restant: {{ paie.montantRestant|number_format(0, ',', ' ') }} Mds</span>
                </div>
            </div>
        </div>
        {% else %}
        <!-- Affichage quand pas de données de paie pour la période -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-users"></i>
                    Exécution de la Paie
                </h3>
            </div>
            <div class="empty-data-message">
                <i class="fas fa-calendar-times"></i>
                <p>Aucune donnée de paie disponible pour cette période</p>
                <span class="empty-data-hint">Essayez de sélectionner une autre plage de dates</span>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Row 4: Table + Radar -->
    <div class="grid-2">
        <!-- Tableau des données -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-table"></i>
                    Historique des Indicateurs
                </h3>
            </div>
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Cours BCC</th>
                            <th>Parallèle</th>
                            <th>Écart</th>
                            <th>Solde</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for kpi in kpiData %}
                        <tr>
                            <td><strong>{{ kpi.dateSituation|date('d/m') }}</strong></td>
                            <td>{{ kpi.coursIndicatif|number_format(2, ',', ' ') }}</td>
                            <td>{{ kpi.paralleleVente|number_format(2, ',', ' ') }}</td>
                            <td>
                                <span class="inline-badge {{ kpi.ecartIndicParallele > 100 ? 'danger' : 'success' }}">
                                    {{ kpi.ecartIndicParallele|number_format(0, ',', ' ') }}
                                </span>
                            </td>
                            <td class="{{ kpi.solde >= 0 ? 'text-success font-bold' : 'text-danger font-bold' }}">
                                {{ kpi.solde|number_format(2, ',', ' ') }}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Radar / Indicateurs Synthétiques -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-pie"></i>
                    Indicateurs de Vigilance
                </h3>
                <button class="info-toggle" onclick="toggleRadarInfo()" title="Comprendre les indicateurs">
                    <i class="fas fa-question-circle"></i>
                </button>
            </div>
            
            <!-- Panneau d'explication (caché par défaut) -->
            <div id="radarInfoPanel" class="radar-info-panel" style="display: none;">
                <div class="radar-info-header">
                    <i class="fas fa-info-circle"></i>
                    <span>Comment lire ce graphique ?</span>
                </div>
                <div class="radar-info-content">
                    <p class="radar-info-intro">Plus la zone est <strong>étendue vers l'extérieur</strong>, meilleure est la situation économique.</p>
                    <div class="indicator-list">
                        <div class="indicator-item">
                            <span class="indicator-name"><i class="fas fa-exchange-alt"></i> Stabilité Change</span>
                            <span class="indicator-desc">Écart entre le cours officiel et le taux parallèle. Un faible écart = marché stable.</span>
                        </div>
                        <div class="indicator-item">
                            <span class="indicator-name"><i class="fas fa-coins"></i> Niveau Réserves</span>
                            <span class="indicator-desc">Réserves internationales en USD. Score basé sur 5 milliards USD comme référence optimale.</span>
                        </div>
                        <div class="indicator-item">
                            <span class="indicator-name"><i class="fas fa-balance-scale"></i> Équilibre Budget</span>
                            <span class="indicator-desc">Solde budgétaire de l'État. Excédent = score élevé, déficit = score bas.</span>
                        </div>
                        <div class="indicator-item">
                            <span class="indicator-name"><i class="fas fa-tint"></i> Liquidité</span>
                            <span class="indicator-desc">Avoirs libres en CDF dans le système bancaire. Plus = meilleure liquidité.</span>
                        </div>
                        <div class="indicator-item">
                            <span class="indicator-name"><i class="fas fa-chart-line"></i> Croissance</span>
                            <span class="indicator-desc">Ratio recettes/dépenses publiques. Ratio > 1 = excédent budgétaire.</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="chart-container" style="height: 280px;">
                <canvas id="chartRadar"></canvas>
            </div>
            
            <!-- Mini légende des scores actuels -->
            <div class="radar-scores-legend">
                <div class="score-item" title="Stabilité du marché des changes">
                    <span class="score-label">Change</span>
                    {% if radarScores.stabiliteChange is not null %}
                        <span class="score-value {{ radarScores.stabiliteChange >= 60 ? 'good' : (radarScores.stabiliteChange >= 40 ? 'medium' : 'bad') }}">{{ radarScores.stabiliteChange }}%</span>
                    {% else %}
                        <span class="score-value na">N/A</span>
                    {% endif %}
                </div>
                <div class="score-item" title="Niveau des réserves internationales">
                    <span class="score-label">Réserves</span>
                    {% if radarScores.niveauReserves is not null %}
                        <span class="score-value {{ radarScores.niveauReserves >= 60 ? 'good' : (radarScores.niveauReserves >= 40 ? 'medium' : 'bad') }}">{{ radarScores.niveauReserves }}%</span>
                    {% else %}
                        <span class="score-value na">N/A</span>
                    {% endif %}
                </div>
                <div class="score-item" title="Équilibre budgétaire">
                    <span class="score-label">Budget</span>
                    {% if radarScores.equilibreBudget is not null %}
                        <span class="score-value {{ radarScores.equilibreBudget >= 60 ? 'good' : (radarScores.equilibreBudget >= 40 ? 'medium' : 'bad') }}">{{ radarScores.equilibreBudget }}%</span>
                    {% else %}
                        <span class="score-value na">N/A</span>
                    {% endif %}
                </div>
                <div class="score-item" title="Liquidité du système">
                    <span class="score-label">Liquidité</span>
                    {% if radarScores.liquidite is not null %}
                        <span class="score-value {{ radarScores.liquidite >= 60 ? 'good' : (radarScores.liquidite >= 40 ? 'medium' : 'bad') }}">{{ radarScores.liquidite }}%</span>
                    {% else %}
                        <span class="score-value na">N/A</span>
                    {% endif %}
                </div>
                <div class="score-item" title="Performance budgétaire">
                    <span class="score-label">Croissance</span>
                    {% if radarScores.croissance is not null %}
                        <span class="score-value {{ radarScores.croissance >= 60 ? 'good' : (radarScores.croissance >= 40 ? 'medium' : 'bad') }}">{{ radarScores.croissance }}%</span>
                    {% else %}
                        <span class="score-value na">N/A</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <style>
