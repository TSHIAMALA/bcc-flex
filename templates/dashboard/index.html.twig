{% extends 'base.html.twig' %}

{% block title %}Vue d'ensemble{% endblock %}
{% block header_title %}Tableau de Bord{% endblock %}
{% block header_subtitle %}Indicateurs de Conjoncture Économique{% endblock %}

{% block body %}
    <!-- ITM Gauge + Stats Header -->
    <div class="dashboard-top mb-30">
        <!-- ITM Gauge Section -->
        <div class="itm-section">
            <div class="itm-gauge-wrapper">
                <div class="itm-gauge" data-score="{{ itm.score }}">
                    <svg class="itm-gauge-svg" viewBox="0 0 200 120">
                        <defs>
                            <linearGradient id="gaugeGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                                <stop offset="0%" style="stop-color:#10b981"/>
                                <stop offset="50%" style="stop-color:#f59e0b"/>
                                <stop offset="100%" style="stop-color:#ef4444"/>
                            </linearGradient>
                        </defs>
                        <!-- Background arc -->
                        <path class="gauge-bg" d="M 20 100 A 80 80 0 0 1 180 100" fill="none" stroke="#e2e8f0" stroke-width="12" stroke-linecap="round"/>
                        <!-- Value arc -->
                        <path class="gauge-value" d="M 20 100 A 80 80 0 0 1 180 100" fill="none" stroke="url(#gaugeGradient)" stroke-width="12" stroke-linecap="round" stroke-dasharray="251.2" stroke-dashoffset="{{ 251.2 - (itm.score / 100 * 251.2) }}"/>
                        <!-- Needle -->
                        <line class="gauge-needle" x1="100" y1="100" x2="100" y2="30" stroke="{{ itmColor }}" stroke-width="3" stroke-linecap="round" transform="rotate({{ -90 + (itm.score * 1.8) }}, 100, 100)"/>
                        <circle cx="100" cy="100" r="8" fill="{{ itmColor }}"/>
                    </svg>
                    <div class="itm-score-display">
                        <span class="itm-score-value" style="color: {{ itmColor }}">{{ itm.score }}</span>
                        <span class="itm-score-label">/ 100</span>
                    </div>
                </div>
                <div class="itm-classification {{ itmClass }}">
                    <i class="fas fa-{{ itmClass == 'danger' ? 'exclamation-triangle' : (itmClass == 'warning' ? 'exclamation-circle' : 'check-circle') }}"></i>
                    {{ itm.label }}
                </div>
                <div class="itm-title">Indice de Tension du Marché</div>
            </div>
        </div>

        <!-- KPI Stats Row -->
        <div class="stats-header">
            <div class="stats-row">
                <div class="stat-box">
                    <div class="stat-icon"><i class="fas fa-university"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">COURS INDICATIF</span>
                        <span class="stat-value">{{ latestKPI.coursIndicatif|default(0)|number_format(2, ',', ' ') }}</span>
                        <span class="stat-change {{ varCoursIndicatif > 0 ? 'negative' : 'positive' }}">
                            <i class="fas fa-{{ varCoursIndicatif > 0 ? 'caret-up' : 'caret-down' }}"></i>
                            {{ varCoursIndicatif|abs|number_format(2, ',', ' ') }}%
                        </span>
                    </div>
                </div>
                <div class="stat-box">
                    <div class="stat-icon warning"><i class="fas fa-exchange-alt"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">ÉCART INDICATIF/PARALLÈLE</span>
                        <span class="stat-value">{{ latestMarche.ecartIndicParallele|default(0)|number_format(0, ',', ' ') }}</span>
                        <span class="stat-change {{ latestMarche.ecartIndicParallele|default(0) > 100 ? 'negative' : 'positive' }}">CDF</span>
                    </div>
                </div>
                <div class="stat-box">
                    <div class="stat-icon success"><i class="fas fa-piggy-bank"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">RÉSERVES INT.</span>
                        <span class="stat-value">{{ latestKPI.reservesInternationalesUsd|default(0)|number_format(0, ',', ' ') }}M</span>
                        <span class="stat-change {{ varReserves >= 0 ? 'positive' : 'negative' }}">
                            <i class="fas fa-{{ varReserves >= 0 ? 'caret-up' : 'caret-down' }}"></i>
                            {{ varReserves|abs|number_format(2, ',', ' ') }}%
                        </span>
                    </div>
                </div>
                <div class="stat-box">
                    <div class="stat-icon {{ latestKPI.solde|default(0) >= 0 ? 'success' : 'danger' }}"><i class="fas fa-balance-scale"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">SOLDE BUDGET</span>
                        <span class="stat-value">{{ latestKPI.solde|default(0)|number_format(2, ',', ' ') }}</span>
                        <span class="stat-change {{ latestKPI.solde|default(0) >= 0 ? 'positive' : 'negative' }}">
                            {{ latestKPI.solde|default(0) >= 0 ? 'Excédent' : 'Déficit' }}
                        </span>
                    </div>
                </div>
                <div class="stat-box">
                    <div class="stat-icon info"><i class="fas fa-dollar-sign"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">VOLUME USD</span>
                        <span class="stat-value">{{ (totalVolumeUSD / 1000000)|number_format(1, ',', ' ') }}M</span>
                        <span class="stat-change neutral">Marché</span>
                    </div>
                </div>
                <div class="stat-box">
                    <div class="stat-icon"><i class="fas fa-landmark"></i></div>
                    <div class="stat-content">
                        <span class="stat-label">AVOIRS EXTERNES</span>
                        <span class="stat-value">{{ latestKPI.avoirsExternesUsd|default(0)|number_format(0, ',', ' ') }}M</span>
                        <span class="stat-change neutral">BCC</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Alerts Section -->
    {% if activeAlerts|length > 0 %}
    <div class="alert-box alert-{{ activeAlerts[0].type }} mb-30">
        <i class="fas fa-exclamation-triangle alert-icon"></i>
        <div class="alert-content">
            <h4>⚠️ {{ activeAlerts|length }} alerte(s) active(s) requérant attention</h4>
            <p>Des indicateurs ont dépassé les seuils configurés. Consultez le tableau ci-dessous.</p>
        </div>
    </div>
    {% endif %}

    <!-- Row 1: Evolution Chart + Active Alerts Table -->
    <div class="grid-2 mb-30">
        <!-- Graphique Évolution des Cours -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-line"></i>
                    Évolution du Taux de Change
                </h3>
                <div class="card-actions">
                    <span class="card-badge badge-info">7 jours</span>
                </div>
            </div>
            <div class="chart-container" style="height: 280px;">
                <canvas id="chartCoursEvolution"></canvas>
            </div>
        </div>
        
        <!-- Tableau des Alertes Actives -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-bell"></i>
                    Alertes Actives
                </h3>
                <div class="card-actions">
                    <a href="{{ path('app_alertes') }}" class="card-badge badge-info">Voir tout</a>
                </div>
            </div>
            <div class="table-container">
                {% if activeAlerts|length > 0 %}
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Indicateur</th>
                            <th>Valeur</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for alerte in activeAlerts|slice(0, 5) %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-10">
                                    <i class="fas fa-{{ alerte.icon }} text-{{ alerte.type }}"></i>
                                    <strong>{{ alerte.titre }}</strong>
                                </div>
                            </td>
                            <td>{{ alerte.valeur|number_format(2, ',', ' ') }}</td>
                            <td>
                                <span class="inline-badge {{ alerte.type }}">{{ alerte.statut }}</span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% else %}
                <div class="text-center p-20 text-muted">
                    <i class="fas fa-check-circle fa-3x mb-10" style="color: var(--success);"></i>
                    <p>Aucune alerte active</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Row 2: Barres horizontales + Waterfall -->
    <div class="grid-2 mb-30">
        <!-- Camembert Répartition Recettes -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-pie"></i>
                    Répartition des Recettes
                </h3>
            </div>
            <div style="display: flex; align-items: center; gap: 20px;">
                <div class="chart-container" style="height: 250px; flex: 1;">
                    <canvas id="chartRecettesPie"></canvas>
                </div>
                <div class="pie-legend">
                    <div class="legend-item">
                        <span class="legend-color" style="background: #3B6FAB;"></span>
                        <div>
                            <div class="legend-label">Recettes Fiscales</div>
                            <div class="legend-value">{{ latestFinances.recettesFiscales|default(0)|number_format(0, ',', ' ') }} Mds</div>
                        </div>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color" style="background: #10b981;"></span>
                        <div>
                            <div class="legend-label">Autres Recettes</div>
                            <div class="legend-value">{{ latestFinances.autresRecettes|default(0)|number_format(0, ',', ' ') }} Mds</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Waterfall - Recettes vs Dépenses -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-water"></i>
                    Cascade Budgétaire
                </h3>
            </div>
            <div class="chart-container" style="height: 280px;">
                <canvas id="chartWaterfall"></canvas>
            </div>
        </div>
    </div>

    <!-- Row 3: Area Chart + Doughnut -->
    <div class="grid-2 mb-30">
        <!-- Area Chart - Réserves -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-layer-group"></i>
                    Évolution des Réserves
                </h3>
            </div>
            <div class="chart-container" style="height: 280px;">
                <canvas id="chartReservesArea"></canvas>
            </div>
        </div>
        
        <!-- Doughnut avec centre - Paie -->
        {% if paie %}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-users"></i>
                    Exécution de la Paie
                </h3>
            </div>
            <div style="position: relative;">
                <div class="chart-container" style="height: 250px;">
                    <canvas id="chartPaieDoughnut"></canvas>
                </div>
                <div class="doughnut-center">
                    <div class="doughnut-value">{{ ((paie.montantPaye / paie.montantTotal) * 100)|number_format(0) }}%</div>
                    <div class="doughnut-label">Payé</div>
                </div>
            </div>
            <div class="paie-stats">
                <div class="paie-stat success">
                    <i class="fas fa-check-circle"></i>
                    <span>Payé: {{ paie.montantPaye|number_format(0, ',', ' ') }} Mds</span>
                </div>
                <div class="paie-stat danger">
                    <i class="fas fa-clock"></i>
                    <span>Restant: {{ paie.montantRestant|number_format(0, ',', ' ') }} Mds</span>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Row 4: Table + Radar -->
    <div class="grid-2">
        <!-- Tableau des données -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-table"></i>
                    Historique des Indicateurs
                </h3>
            </div>
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Cours BCC</th>
                            <th>Parallèle</th>
                            <th>Écart</th>
                            <th>Solde</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for kpi in kpiData %}
                        <tr>
                            <td><strong>{{ kpi.dateSituation|date('d/m') }}</strong></td>
                            <td>{{ kpi.coursIndicatif|number_format(2, ',', ' ') }}</td>
                            <td>{{ kpi.paralleleVente|number_format(2, ',', ' ') }}</td>
                            <td>
                                <span class="inline-badge {{ kpi.ecartIndicParallele > 100 ? 'danger' : 'success' }}">
                                    {{ kpi.ecartIndicParallele|number_format(0, ',', ' ') }}
                                </span>
                            </td>
                            <td class="{{ kpi.solde >= 0 ? 'text-success font-bold' : 'text-danger font-bold' }}">
                                {{ kpi.solde|number_format(2, ',', ' ') }}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Radar / Indicateurs Synthétiques -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-radar"></i>
                    Indicateurs de Vigilance
                </h3>
            </div>
            <div class="chart-container" style="height: 280px;">
                <canvas id="chartRadar"></canvas>
            </div>
        </div>
    </div>

    <style>
    /* Dashboard Top Layout */
    .dashboard-top {
        display: flex;
        gap: 25px;
        align-items: stretch;
    }

    /* ITM Gauge Section */
    .itm-section {
        flex-shrink: 0;
        width: 220px;
    }

    .itm-gauge-wrapper {
        background: white;
        border-radius: var(--border-radius);
        padding: 25px 20px;
        box-shadow: var(--shadow);
        text-align: center;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        border-left: 4px solid var(--bcc-primary);
    }

    .itm-gauge {
        position: relative;
        margin-bottom: 10px;
    }

    .itm-gauge-svg {
        width: 100%;
        max-width: 180px;
        margin: 0 auto;
        display: block;
    }

    .gauge-needle {
        transition: transform 1s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .itm-score-display {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
    }

    .itm-score-value {
        font-size: 2.2rem;
        font-weight: 800;
        line-height: 1;
    }

    .itm-score-label {
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .itm-classification {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 25px;
        font-size: 0.85rem;
        font-weight: 700;
        margin-bottom: 8px;
    }

    .itm-classification.success {
        background: var(--success-light);
        color: var(--success);
    }

    .itm-classification.warning {
        background: var(--warning-light);
        color: #b45309;
    }

    .itm-classification.danger {
        background: var(--danger-light);
        color: var(--danger);
    }

    .itm-title {
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Stats Header - flex to fill remaining space */
    .stats-header {
        flex: 1;
        background: linear-gradient(135deg, #2D5A8E 0%, #3B6FAB 100%);
        border-radius: var(--border-radius);
        padding: 25px;
        box-shadow: var(--shadow-lg);
    }

    .stats-row {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        gap: 12px;
        height: 100%;
    }

    .stat-box {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        padding: 15px 12px;
        display: flex;
        align-items: center;
        gap: 10px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: var(--transition);
    }

    .stat-box:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateY(-3px);
    }

    .stat-icon {
        width: 44px;
        height: 44px;
        background: rgba(59, 111, 171, 0.3);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: #5A8BC4;
        flex-shrink: 0;
    }

    .stat-icon.success { background: rgba(16, 185, 129, 0.3); color: #34d399; }
    .stat-icon.danger { background: rgba(239, 68, 68, 0.3); color: #f87171; }
    .stat-icon.warning { background: rgba(245, 158, 11, 0.3); color: #fbbf24; }
    .stat-icon.info { background: rgba(59, 130, 246, 0.3); color: #60a5fa; }

    .stat-content {
        display: flex;
        flex-direction: column;
        min-width: 0;
    }

    .stat-label {
        font-size: 0.65rem;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .stat-value {
        font-size: 1.3rem;
        font-weight: 800;
        color: white;
        line-height: 1.2;
    }

    .stat-change {
        font-size: 0.7rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .stat-change.positive { color: #34d399; }
    .stat-change.negative { color: #f87171; }
    .stat-change.neutral { color: rgba(255, 255, 255, 0.6); }

    /* Pie Chart Legend */
    .pie-legend {
        min-width: 160px;
    }

    .legend-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 0;
        border-bottom: 1px solid #f1f5f9;
    }

    .legend-item:last-child {
        border-bottom: none;
    }

    .legend-color {
        width: 14px;
        height: 14px;
        border-radius: 4px;
    }

    .legend-label {
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    .legend-value {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    /* Doughnut Center */
    .doughnut-center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

    .doughnut-value {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--bcc-primary);
    }

    .doughnut-label {
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    /* Paie Stats */
    .paie-stats {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #f1f5f9;
    }

    .paie-stat {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .paie-stat.success { color: var(--success); }
    .paie-stat.danger { color: var(--danger); }

    /* Inline Badge */
    .inline-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
    }

    .inline-badge.success { background: var(--success-light); color: var(--success); }
    .inline-badge.danger { background: var(--danger-light); color: var(--danger); }
    .inline-badge.warning { background: var(--warning-light); color: #b45309; }

    /* Card Actions */
    .card-actions {
        display: flex;
        gap: 10px;
    }

    .card-actions a {
        text-decoration: none;
    }

    /* Helper classes */
    .d-flex { display: flex; }
    .align-items-center { align-items: center; }
    .gap-10 { gap: 10px; }
    .text-danger { color: var(--danger); }
    .text-warning { color: var(--warning); }

    /* Responsive */
    @media (max-width: 1400px) {
        .stats-row {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 1200px) {
        .dashboard-top {
            flex-direction: column;
        }
        .itm-section {
            width: 100%;
        }
        .itm-gauge-wrapper {
            flex-direction: row;
            justify-content: space-around;
            padding: 20px;
        }
        .stats-row {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .stats-row {
            grid-template-columns: 1fr;
        }
        .grid-2 {
            grid-template-columns: 1fr;
        }
    }
    </style>
{% endblock %}

{% block javascripts %}
<script>
// Données
const evolutionData = [
    {% for m in evolutionMarche %}
    {
        date_situation: '{{ m.conjoncture.dateSituation|date("Y-m-d") }}',
        cours_indicatif: {{ m.coursIndicatif }},
        parallele_vente: {{ m.paralleleVente }},
        parallele_achat: {{ m.paralleleAchat }}
    },
    {% endfor %}
];

const reservesData = [
    {% for r in reservesHistory %}
    {
        date_situation: '{{ r.conjoncture.dateSituation|date("Y-m-d") }}',
        reserves_internationales_usd: {{ r.reservesInternationalesUsd }},
        avoirs_externes_usd: {{ r.avoirsExternesUsd }}
    },
    {% endfor %}
];

// Config commune
Chart.defaults.font.family = "'Inter', sans-serif";
Chart.defaults.plugins.legend.labels.usePointStyle = true;

// 1. Graphique Évolution des Cours
new Chart(document.getElementById('chartCoursEvolution'), {
    type: 'line',
    data: {
        labels: evolutionData.map(d => new Date(d.date_situation).toLocaleDateString('fr-FR', { day: '2-digit', month: '2-digit' })),
        datasets: [
            {
                label: 'Indicatif BCC',
                data: evolutionData.map(d => d.cours_indicatif),
                borderColor: '#3B6FAB',
                backgroundColor: 'rgba(59, 111, 171, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.4,
                pointRadius: 5,
                pointBackgroundColor: '#3B6FAB',
                pointBorderColor: '#fff',
                pointBorderWidth: 2
            },
            {
                label: 'Parallèle Vente',
                data: evolutionData.map(d => d.parallele_vente),
                borderColor: '#ef4444',
                borderWidth: 2,
                borderDash: [5, 5],
                fill: false,
                tension: 0.4,
                pointRadius: 4
            },
            {
                label: 'Parallèle Achat',
                data: evolutionData.map(d => d.parallele_achat),
                borderColor: '#10b981',
                borderWidth: 2,
                fill: false,
                tension: 0.4,
                pointRadius: 4
            }
        ]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: { intersect: false, mode: 'index' },
        plugins: {
            legend: { position: 'top', labels: { padding: 15 } }
        },
        scales: {
            y: { beginAtZero: false, grid: { color: 'rgba(0,0,0,0.05)' } },
            x: { grid: { display: false } }
        }
    }
});

// 2. Camembert Recettes
