{% extends 'base.html.twig' %}

{% block title %}Nouvelle Saisie - BCC-Flex{% endblock %}

{% block header_title %}Nouvelle Saisie{% endblock %}
{% block header_subtitle %}Initialisation d'une nouvelle date{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto">
        <div class="card p-8">
            <div class="mb-6 pb-4 border-b border-gray-100">
                <h3 class="text-xl font-bold text-gray-800 flex items-center gap-3">
                    <span class="bg-blue-100 text-blue-600 p-2 rounded-lg"><i class="fas fa-calendar-plus"></i></span>
                    Sélectionner la Date
                </h3>
                <p class="text-gray-500 mt-1 ml-11 text-sm">Créez une nouvelle entrée conjoncturelle pour commencer la saisie.</p>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                
                <div class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="form-group">
                            {{ form_label(form.date_situation, 'Date de Situation', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.date_situation, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-shadow'}}) }}
                            {{ form_errors(form.date_situation, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.date_applicable, 'Date Applicable', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.date_applicable, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-shadow'}}) }}
                            {{ form_errors(form.date_applicable, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.commentaire, 'Commentaire (Optionnel)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.commentaire, {'attr': {'class': 'w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-shadow', 'rows': 3}}) }}
                    </div>
                </div>

                <div class="pt-6 flex items-center justify-end gap-4 border-t border-gray-100 mt-6">
                    <a href="{{ path('app_saisie') }}" class="text-gray-600 hover:text-gray-900 px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors">
                        Annuler
                    </a>
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-lg shadow-lg hover:shadow-xl transition-all font-medium flex items-center gap-2">
                        <i class="fas fa-check"></i> Créer et Continuer
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
